<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doctor.BehaviorFragment">

    <ScrollView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Weekly Mood/Interaction Chart Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/box_border_bgreen"
                android:orientation="vertical"
                android:layout_margin="2dp">
            <TextView
                android:text="ðŸ“Š Weekly Mood/Interaction Chart"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="8dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/moodChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:elevation="2dp" />
            </LinearLayout>
            <!-- Activity Status Section -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_border_bgreen"
                android:layout_margin="2dp"
                android:padding="8dp"
                android:orientation="vertical">
            <TextView
                android:text="ðŸ“ˆ Activity State"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="8dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/activityChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:elevation="2dp" />
            </LinearLayout>
            <!-- Alerts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_border_bgreen"
                android:layout_margin="2dp"
                android:orientation="vertical">
            <TextView
                android:text="âš ï¸ Recent Alerts"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="16dp"
                android:elevation="2dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:elevation="2dp">

                <!-- Example Alert 1 -->
                <TextView
                    android:id="@+id/alertMissedDoses"
                    android:text="â— Missed 3+ doses"
                    android:textColor="@color/alertRed"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <!-- Example Alert 2 -->
                <TextView
                    android:id="@+id/alertSOSTriggered"
                    android:text="ðŸš¨ SOS Triggered on Apr 9"
                    android:textColor="@color/alertYellow"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="8dp" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
