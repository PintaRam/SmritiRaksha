<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/emergency_button_scene"
    android:background="@android:color/white">

    <!-- Emergency SOS Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_emergency_call"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:backgroundTint="@color/red_500"
        android:elevation="10dp"
        android:gravity="center"
        android:text="SOS"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:cornerRadius="60dp"
        app:icon="@drawable/ic_emergency"
        app:iconGravity="textTop"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348"
        app:rippleColor="@color/red_700"
        app:strokeColor="@color/red_700"
        app:strokeWidth="4dp" />

    <!-- Turn Off Emergency Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_turn_off_emergency"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:backgroundTint="@color/green_500"
        android:text="Turn Off"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:cornerRadius="60dp"
        app:iconGravity="textTop"
        app:rippleColor="@color/green_700"
        android:elevation="10dp"
        app:iconTint="@android:color/white"
        app:strokeWidth="4dp"
        app:strokeColor="@color/green_700"
        app:layout_constraintTop_toBottomOf="@id/btn_emergency_call"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.motion.widget.MotionLayout>
