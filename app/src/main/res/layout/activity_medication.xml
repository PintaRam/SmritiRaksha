<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.MedicationActivity">

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackToReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Reminders"
            android:textAllCaps="false"
            android:backgroundTint="@color/blue_green"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <!-- RecyclerView for Prescriptions -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPrescriptions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnBackToReminder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/prescription" />

</androidx.constraintlayout.widget.ConstraintLayout>