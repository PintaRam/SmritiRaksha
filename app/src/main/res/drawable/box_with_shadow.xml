<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B3D3D3D3" /> <!-- Light gray for shadow -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main Background with Border -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Box background color -->
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#FF6200EE" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
