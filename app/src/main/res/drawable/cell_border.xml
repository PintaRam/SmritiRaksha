<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Frosted Glass Effect Background -->
    <item>
        <shape>
            <!-- Semi-transparent background for the frosted effect -->
            <solid android:color="#80FFFFFF" /> <!-- Adjust alpha for transparency -->
            <corners android:radius="8dp" /> <!-- Rounded corners for a softer look -->
        </shape>
    </item>

    <!-- Inner Gradient for Glass Effect -->
    <item>
        <shape>
            <gradient
                android:startColor="#66FFFFFF"
                android:endColor="#33FFFFFF"
                android:angle="45" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape>
            <stroke
                android:color="#AAFFFFFF"
                android:width="2dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>


